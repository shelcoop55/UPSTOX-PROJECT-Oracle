# Upstox OAuth Credentials
UPSTOX_CLIENT_ID=your_client_id_here
UPSTOX_CLIENT_SECRET=your_secret_here
UPSTOX_REDIRECT_URI=http://localhost:8000/auth/callback

# Security
ENCRYPTION_KEY=generate_with_fernet_key_generate
SECRET_KEY=change-this-to-random-secret-key-in-production
API_KEY=optional-api-key-for-protected-endpoints

# Server
FLASK_PORT=8000
FLASK_DEBUG=False
FLASK_ENV=production
APP_VERSION=1.0.0

# Database
DATABASE_URL=sqlite:///market_data.db
# For PostgreSQL: postgresql://upstox:password@localhost:5432/upstox_trading

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Monitoring & Error Tracking
SENTRY_DSN=optional-sentry-dsn-for-error-tracking

# Email Notifications
EMAIL_FROM=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_TO=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Oracle Cloud Deployment (for CI/CD)
OCI_HOST=your-oracle-cloud-ip
OCI_USERNAME=opc
# OCI_SSH_KEY should be set as GitHub secret
